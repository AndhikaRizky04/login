
@page
@model login.Pages.Admin.UserManagementModel
@{
    ViewData["Title"] = "Manajemen User";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0">Manajemen User</h3>
        </div>
        <div class="card-body p-4">
            <div class="row">
                <div class="col-md-8">
                    <h4>Daftar User</h4>
                    <div class="table-responsive mt-3">
                        <table class="table table-striped table-bordered">
                            <thead class="thead-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Username</th>
                                    <th>Email</th>
                                    <th>Role</th>
                                    <th>Tanggal Dibuat</th>
                                    <th>Aksi</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model.Users)
                                {
                                    <tr>
                                        <td>@user.Id</td>
                                        <td>@user.Username</td>
                                        <td>@user.Email</td>
                                        <td>@user.Role</td>
                                        <td>@user.CreatedDate.ToString("dd-MM-yyyy HH:mm:ss")</td>
                                        <td>
                                            <button class="btn btn-sm btn-info">Edit</button>
                                            <button class="btn btn-sm btn-danger">Hapus</button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="col-md-4">
                    <h4>Tambah User Baru</h4>
                    <form method="post" asp-page-handler="AddUser">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="mb-3">
                            <label asp-for="NewUser.Username" class="form-label">Username</label>
                            <input asp-for="NewUser.Username" class="form-control" />
                            <span asp-validation-for="NewUser.Username" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="NewUser.Password" class="form-label">Password</label>
                            <input asp-for="NewUser.Password" class="form-control" />
                            <span asp-validation-for="NewUser.Password" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="NewUser.Email" class="form-label">Email</label>
                            <input asp-for="NewUser.Email" class="form-control" />
                            <span asp-validation-for="NewUser.Email" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="NewUser.Role" class="form-label">Role</label>
                            <select asp-for="NewUser.Role" class="form-control">
                                <option value="user">User</option>
                                <option value="admin">Admin</option>
                            </select>
                        </div>
                        
                        <button type="submit" class="btn btn-primary">Tambah User</button>
                    </form>
                </div>
            </div>
            
            <div class="mt-4">
                <a asp-page="/Admin/Dashboard" class="btn btn-secondary">Kembali ke Dashboard</a>
            </div>
        </div>
    </div>
</div>
@page
@model login.Pages.Account.LogoutModel
@{
    ViewData["Title"] = "Logout";
}

<div class="text-center mt-5">
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
    <h3 class="mt-3">Logging out...</h3>
    <p>Anda akan dialihkan ke halaman login...</p>
</div>

<script>
    // Tambahan untuk memastikan refresh cache browser
    window.onload = function() {
        // Hapus localStorage jika ada data login yang disimpan
        localStorage.clear();

        // Hapus sessionStorage
        sessionStorage.clear();

        // Force reload halaman untuk memastikan cache browser dibersihkan
        setTimeout(function() {
            window.location.href = '/Index';
        }, 1000);
    }
</script>